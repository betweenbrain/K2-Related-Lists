<?xml version="1.0" encoding="utf-8"?>
<install type="module"
         version="2.5"
         method="upgrade">
	<name>K2 Related Lists</name>
	<creationDate>June 20, 2013</creationDate>
	<author>Matt Thomas</author>
	<authorUrl>http://betweenbrain.com</authorUrl>
	<copyright>Copyright (C) 2012 Matt Thomas. All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>MOD_K2_RELATED_LISTS_DESC</description>
	<files>
		<filename module="mod_k2_related_lists">mod_k2_related_lists.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_k2_related_lists.ini</language>
	</languages>

	<params>
		<param name="tagLimit"
		       type="text"
		       default=""
		       label="MOD_K2_RELATED_LISTS_TAG_LIMIT_LABEL"
		       description="MOD_K2_RELATED_LISTS_TAG_LIMIT_DESC"/>
		<param name="includeSelf"
		       type="list"
		       default=""
		       label="MOD_K2_RELATED_LISTS_INCLUDE_SELF_LABEL"
		       description="MOD_K2_RELATED_LISTS_INCLUDE_SELF_DESC">
			<option value="">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="moduleclass_sfx"
		       type="text"
		       default=""
		       label="Module Class Suffix"
		       description="PARAMMODULECLASSSUFFIX"/>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="moduleclass_sfx"
						type="text"
						label="Module Class Suffix"
						description="PARAMMODULECLASSSUFFIX."/>
			</fieldset>
		</fields>
	</config>

</install>
